{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist"
  }
}